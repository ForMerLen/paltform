<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/LL1"
        app:layout_constraintVertical_weight="1.5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/LL2"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:background="@drawable/appname" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/LL2"
        app:layout_constraintVertical_weight="1"
        app:layout_constraintTop_toBottomOf="@id/LL1"
        app:layout_constraintBottom_toTopOf="@id/LL3"
        >

        <EditText
            android:id="@+id/id_username"
            android:background="@drawable/bg_edit"
            android:layout_width="match_parent"
            android:hint="请输入用户名"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/LL3"
        app:layout_constraintVertical_weight="1"
        app:layout_constraintTop_toBottomOf="@id/LL2"
        app:layout_constraintBottom_toTopOf="@id/LL4">

        <EditText
            android:id="@+id/id_passwrod"
            android:layout_width="match_parent"
            android:background="@drawable/bg_edit"
            android:hint="请输入密码"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:password="true"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/LL4"
        android:orientation="vertical"
        app:layout_constraintVertical_weight="1"
        app:layout_constraintTop_toBottomOf="@id/LL3"
        app:layout_constraintBottom_toTopOf="@id/LL5">

        <ImageButton
            android:id="@+id/login"
            android:src="@drawable/logbtn_state"
            android:background="#00000000"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:text="登陆"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/LL5"
        android:gravity="right"
        app:layout_constraintVertical_weight="2"
        app:layout_constraintTop_toBottomOf="@id/LL4"
        app:layout_constraintBottom_toTopOf="@id/LL6">

        <Button
            android:id="@+id/register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:src="@drawable/bg_reg"
            android:text="新用户注册"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_gravity="bottom"

            app:layout_constraintStart_toEndOf="@+id/login" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/LL6"
        app:layout_constraintVertical_weight="1"
        app:layout_constraintTop_toBottomOf="@id/LL5"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TextView" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>